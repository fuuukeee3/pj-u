<h1>ログイン</h1>

<% if @login.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <% @login.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @login, url: login_path do |f| %>
  <div>
    <%= f.label :user_id, "ユーザーID" %>
    <%= f.text_field :user_id %>
  </div>

  <div>
    <%= f.label :password, "パスワード" %>
    <%= f.password_field :password %>
  </div>

  <%= f.submit "ログインする" %>
<% end %>
